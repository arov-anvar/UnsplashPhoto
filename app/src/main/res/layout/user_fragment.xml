<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/userNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textFontWeight="800"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="mahmud"/>

    <ImageView
        android:id="@+id/pictureUserImg"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/empty"
        app:layout_constraintTop_toBottomOf="@+id/userNameTxt"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/search" />

    <TextView
        android:id="@+id/followersCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toTopOf="@+id/pictureUserImg"
        app:layout_constraintStart_toEndOf="@+id/pictureUserImg"
        app:layout_constraintEnd_toStartOf="@id/followingCountTxt"
        tools:text="100"/>

    <TextView
        android:id="@+id/followingCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toEndOf="@+id/followersCountTxt"
        app:layout_constraintTop_toTopOf="@id/followersCountTxt"
        app:layout_constraintEnd_toEndOf="@+id/downloadsCountTxt"
        tools:text="100"/>

    <TextView
        android:id="@+id/downloadsCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toTopOf="@id/followingCountTxt"
        app:layout_constraintStart_toEndOf="@id/followingCountTxt"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="100"/>

</androidx.constraintlayout.widget.ConstraintLayout>