<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/dimensTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_dimensions"
        android:drawablePadding="8dp"
        android:gravity="left|center"
        android:text="Dimensions: 2000 x 1000"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/cameraTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_camera"
        android:drawablePadding="8dp"
        android:gravity="left|center"
        android:padding="8dp"
        android:text="Model : Sony hx 100"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/exposureTimeTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_exposure_time"
        android:drawablePadding="8dp"
        android:gravity="left|center"
        android:padding="8dp"
        android:text="Exposure time: 1/11"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/apertureTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_exposure_time"
        android:drawablePadding="8dp"
        android:gravity="left|center"
        android:padding="8dp"
        android:text="Exposure time: 1/11"
        android:textColor="@color/colorBlack" />

</LinearLayout>